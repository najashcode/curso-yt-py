# Gestor de Tareas Personal

# Lista de tareas (almacena diccionarios)
tareas = []

def mostrar_menu():
    print("\nğŸ“Œ Gestor de Tareas")
    print("1. Agregar tarea")
    print("2. Mostrar tareas")
    print("3. Marcar tarea como completada")
    print("4. Eliminar tarea")
    print("5. Salir")

def agregar_tarea():
    descripcion = input("DescripciÃ³n de la tarea: ")
    prioridad = input("Prioridad (Alta, Media, Baja): ").capitalize()
    tarea = {"descripcion": descripcion, "prioridad": prioridad, "estado": "Pendiente"}
    tareas.append(tarea)
    print("âœ… Tarea agregada con Ã©xito.")

def mostrar_tareas():
    if not tareas:
        print("âš ï¸ No hay tareas registradas.")
        return
    print("\nğŸ“‹ Lista de tareas:")
    for i, tarea in enumerate(tareas, start=1):
        print(f"{i}. {tarea['descripcion']} | Prioridad: {tarea['prioridad']} | Estado: {tarea['estado']}")

def completar_tarea():
    mostrar_tareas()
    if not tareas:
        return
    try:
        indice = int(input("Ingrese el nÃºmero de la tarea completada: ")) - 1
        if 0 <= indice < len(tareas):
            tareas[indice]["estado"] = "Completada"
            print("âœ… Tarea marcada como completada.")
        else:
            print("âš ï¸ NÃºmero invÃ¡lido.")
    except ValueError:
        print("âš ï¸ Ingresa un nÃºmero vÃ¡lido.")

def eliminar_tarea():
    mostrar_tareas()
    if not tareas:
        return
    try:
        indice = int(input("Ingrese el nÃºmero de la tarea a eliminar: ")) - 1
        if 0 <= indice < len(tareas):
            tareas.pop(indice)
            print("ğŸ—‘ï¸ Tarea eliminada con Ã©xito.")
        else:
            print("âš ï¸ NÃºmero invÃ¡lido.")
    except ValueError:
        print("âš ï¸ Ingresa un nÃºmero vÃ¡lido.")

# Bucle principal
while True:
    mostrar_menu()
    opcion = input("Seleccione una opciÃ³n: ")

    if opcion == "1":
        agregar_tarea()
    elif opcion == "2":
        mostrar_tareas()
    elif opcion == "3":
        completar_tarea()
    elif opcion == "4":
        eliminar_tarea()
    elif opcion == "5":
        print("ğŸ‘‹ Saliendo del gestor de tareas...")
        break
    else:
        print("âš ï¸ OpciÃ³n no vÃ¡lida. Intente nuevamente.")
